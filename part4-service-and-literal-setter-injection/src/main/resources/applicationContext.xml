<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!--Define your service bean here-->
    <bean id="accessoriesService" class="org.example.services.AccessoriesServiceImpl"></bean>

    <!--Define your component bean here-->
    <bean id="badmintonSport" class="org.example.components.Badminton">
        <property name="association" value="Badminton World Federation" />
        <property name="accessoriesService" ref="accessoriesService" />
    </bean>
    <bean id="cricketSport" class="org.example.components.Cricket">
        <property name="association" value="International Cricket Council" />
        <property name="accessoriesService" ref="accessoriesService" />
    </bean>

</beans>